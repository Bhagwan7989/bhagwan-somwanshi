            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            animation: slideDown 0.6s ease;
            width: 60%;
            margin-left: auto;
            margin-right: auto;
        }

        .filter-row {
            margin-bottom: 12px;
        }

        label {
            display: inline-block;
            width: 150px;
            font-weight: bold;
            color: #374151;
        }

        input, select {
            padding: 6px;
            border-radius: 6px;
