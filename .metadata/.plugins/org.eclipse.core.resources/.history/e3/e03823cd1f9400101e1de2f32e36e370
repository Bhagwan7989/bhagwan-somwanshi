<body>
    <h2>Transaction Report</h2>

    <!-- Filter Form -->
    <form action="ReportServlet" method="post">
        <label>Start Date:</label>
        <input type="date" name="startDate" value="<%= request.getParameter("startDate") != null ? request.getParameter("startDate") : "" %>" required />

        <label>End Date:</label>
        <input type="date" name="endDate" value="<%= request.getParameter("endDate") != null ? request.getParameter("endDate") : "" %>" required />

        <label>Status:</label>
        <select name="status">
            <option value="">-- Select Status --</option>
            <option value="SUCCESS" <%= "SUCCESS".equals(request.getParameter("status")) ? "selected" : "" %>>SUCCESS</option>
            <option value="FAILED" <%= "FAILED".equals(request.getParameter("status")) ? "selected" : "" %>>FAILED</option>
        </select>

        <label>Amount Range:</label>
        <input type="number" step="0.01" name="minAmount" placeholder="Min Amount" value="<%= request.getParameter("minAmount") != null ? request.getParameter("minAmount") : "" %>" />
        <input type="number" step="0.01" name="maxAmount" placeholder="Max Amount" value="<%= request.getParameter("maxAmount") != null ? request.getParameter("maxAmount") : "" %>" />

        <button type="submit">Generate Report</button>
    </form>

    <!-- Export Buttons -->
    <div class="export-buttons">
        <form action="ExcelExportServlet" method="post" style="display:inline;">
            <button type="submit">Export to Excel</button>
        </form>
        <form action="PdfExportServlet" method="post" style="display:inline;">
            <button type="submit">Export to PDF</button>
        </form>
    </div>

    <!-- Results Table -->
    <% if (transactions != null && !transactions.isEmpty()) { %>
        <table>
            <tr>
                <th>ID</th>
                <th>Account</th>
                <th>IFSC</th>
                <th>Beneficiary</th>
                <th>Sender</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Currency</th>
                <th>Mode</th>
                <th>Status</th>
                <th>Reference</th>
                <th>Branch</th>
                <th>Description</th>
                <th>Remarks</th>
                <th>UTR No</th>
            </tr>
            <% for (Transaction t : transactions) { %>
                <tr>
                    <td><%= t.getTransactionId() %></td>
                    <td><%= t.getAccountNumber() %></td>
                    <td><%= t.getIfscCode() %></td>
                    <td><%= t.getBeneficiaryName() %></td>
                    <td><%= t.getSenderName() %></td>
                    <td><%= t.getTransactionDate() %></td>
                    <td><%= t.getAmount() %></td>
                    <td><%= t.getCurrency() %></td>
                    <td><%= t.getMode() %></td>
                    <td><%= t.getStatus() %></td>
                    <td><%= t.getReferenceNumber() %></td>
                    <td><%= t.getBranch() %></td>
                    <td><%= t.getDescription() %></td>
                    <td><%= t.getRemarks() %></td>
                    <td><%= t.getUtrNumber() %></td>
                </tr>
            <% } %>
        </table>

        <!-- Pagination -->
        <div class="pagination">
            <% if (currentPage > 1) { %>
                <form action="ReportServlet" method="post" style="display:inline;">
                    <input type="hidden" name="page" value="<%= currentPage - 1 %>"/>
                    <button type="submit">Previous</button>
                </form>
            <% } %>

            <span>Page <%= currentPage %> of <%= totalPages %></span>

            <% if (currentPage < totalPages) { %>
                <form action="ReportServlet" method="post" style="display:inline;">
                    <input type="hidden" name="page" value="<%= currentPage + 1 %>"/>
                    <button type="submit">Next</button>
                </form>
            <% } %>
        </div>
    <% } else if (transactions != null) { %>
        <p>No records found.</p>
    <% } %>
</body>
